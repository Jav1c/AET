<ScoreScreen>:
    name: 'ScoreScreen'
    canvas.before:
        Rectangle:
            size:self.size
            source: 'bg1.png'

    FloatLayout:
        Button:
            on_release:app.root.current = 'home'
            size_hint:0.175,0.09
            pos_hint: {"x":0.035,"y":0.90}
            background_normal:'back.png'
            background_down:'back.png'


        Label:
            text: 'Result'
            font_size: self.width / 19
            color: 1, 1, 1
            font_name: 'GlacialIndifference-Regular.otf'
            pos_hint: {'center_x': 0.275, 'center_y': 0.945}

        Label:
            text: 'Here is your score!'
            font_size: self.width / 21
            color: 1, 1, 1
            font_name: 'GlacialIndifference-Bold.otf'
            pos_hint: {'center_x': 0.51, 'center_y': 0.87}

        Label:
            text: 'Score'
            font_size: self.width / 18
            color: 0, 0, 0
            font_name: 'GlacialIndifference-Bold.otf'
            pos_hint: {'center_x': 0.5, 'center_y': 0.76}

        Image:
            source: 'metro.png'
            size_hint: (0.45, 0.45)
            pos_hint: {'center_x': 0.5, 'center_y': 0.71}

        Label:
            id: final_score
            font_size: self.width / 10
            font_name: 'GlacialIndifference-Bold.otf'
            text: " 0"
            size_hint: .9, .5
            color: (0, 0, 0)
            pos_hint: {"x": .035, "y":0.45}



        Image:
            source: 'starRec.png'
            size_hint: (0.88, 1.3)
            pos_hint: {'center_x': 0.49, 'center_y': 0.34}

        Label:
            text: ' Time Taken'
            font_size: self.width / 19
            color: (0.2353, 0.0706, 0.2745, 1)
            font_name: 'GlacialIndifference-Bold.otf'
            pos_hint: {'center_x': 0.5, 'center_y': 0.42}

        BoxLayout:
            orientation: 'vertical'
            pos_hint: {'center_x': 0.5, 'center_y': 0.38}

            Label:
                id: timer_label
                text: "Time: 0"
                color: (0 ,0 ,0)
                font_size: 20
                font_name: 'GlacialIndifference-Bold.otf'


        Button:
            text: 'Play Again'
            size_hint:0.35, 0.065
            pos_hint: {"x":0.1,"y":0.065}
            text_size: self.width, None
            font_size:self.width/8
            font_name: 'GlacialIndifference-Bold.otf'
            color: (1, 1, 1)
            background_color:(0.6824, 0.2, 0.8, 1)
            halign: 'center'
            valign: 'center'
            on_release:app.root.current = 'triviaboard'

        Button:
            text: "Restart"
            size_hint: .35, .065
            pos_hint: {"x":0.1,"y":0.07}
            text_size: self.width, None
            font_size:self.width/8
            font_name: 'GlacialIndifference-Bold.otf'
            color: (1, 1, 1)
            background_color:(0.6824, 0.2, 0.8, 1)
            halign: 'center'
            valign: 'center'
            on_release: app.root.current = 'Q1'

        Button:
            text: 'Next Quiz'
            size_hint: 0.35, 0.065
            pos_hint: {"x":0.5,"y":0.065}
            text_size: self.width, None
            font_size: self.width / 8
            font_name: 'GlacialIndifference-Bold.otf'
            color: (1, 1, 1)
            background_color:(0.6824, 0.2, 0.8, 1)
