<HomePage>:
    name:'home'
    canvas.before:
        Rectangle:
            size:self.size
            source: 'home.png'

    Button:
        on_release:app.root.current = 'Q1'
        size_hint:0.7,0.45
        pos_hint: {"x":0.15,"y":0.15}
        background_normal:'btn.png'
        background_down:'btn.png'

    Button:
        on_release:app.root.current = 'ScoreScreen'
        size_hint:0.3,0.45
        pos_hint: {"x":0.2,"y":0.2}
        background_normal:'nextbtn.png'
        background_down:'nextbtn.png'
#=============================================================Questions=================================================
<Q1>:
    name: "Q1"
    FloatLayout:

    Image:
        source:"Assets/pic1.png"
        allow_stretch:True
        keep_ratio: False
        size_hint:.50,.25
        pos_hint: {"x":.25, "top":.75}
    Label:
        text:"What is the basic unit of Life?"
        size_hint:.4,.4
        pos_hint: {"x":.30, "top":.65}

    Button:
        text: "Cell"
        size_hint: .8,.05
        pos_hint: {"x":.1, "top":.35}
        on_release: app.check_answer(root, 0)  # Assuming 0 is the index of the correct answer

    Button:
        text: "Organ"
        size_hint: .8,.05
        pos_hint: {"x":.1, "top":.30}
        on_release: app.check_answer(root, 1)  # Adjust the index based on the correct answer

    Button:
        text: "Tissue"
        size_hint: .8,.05
        pos_hint: {"x":.1, "top":.25}
        on_release: app.check_answer(root, 2)  # Adjust the index based on the correct answer

    Button:
        text: "System"
        size_hint: .8,.05
        pos_hint: {"x":.1, "top":.20}
        on_release: app.check_answer(root, 3)  # Adjust the index based on the correct answer

    Label:
        id: score_label
        text: "Score: 0"
        size_hint: .2, .05
        pos_hint: {"x": .75, "top": .98}

    Button:
        text: "Next"
        size_hint: .2, .05
        pos_hint: {"x": .75, "top": .02}
        on_release: app.check_answer(root, root.correct_answer)

    Label:
        id: feedback_label
        text: ""
        size_hint: .2, .05
        pos_hint: {"x": .75, "top": .95}
